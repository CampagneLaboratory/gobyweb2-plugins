<taskConfig xsi:noNamespaceSchemaLocation="../../../schemas/plugins.xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>Execute plugin tests</name>
    <id>GOBYWEB_PLUGIN_TEST_RUNNER</id>
    <help>Execute plugin tests included in the input jar as JUnit test cases or suites and produce reports in both XML and TXT formats.
    </help>
    <version>1.0</version>
    <requires>
        <resource>
            <id>MAVEN</id>
            <versionAtLeast>3.0.5</versionAtLeast>
        </resource>
    </requires>
    <files>
        <file>
            <id>PLUGIN_RUNNER</id>
            <filename>GobyWebPluginRunner.jar</filename>
        </file>
        <file>
            <id>POM</id>
            <filename>pom.xml</filename>
        </file>
    </files>
    <runtime>
        <need scope="PROCESS" key="excl" value="false"/>
        <need scope="PROCESS" key="h_vmem" value="2G"/>
        <need scope="PROCESS" key="virtual_free" value="2G"/>
        <need scope="INSTALL_ARTIFACTS" key="excl" value="true"/>
        <need scope="INSTALL_ARTIFACTS" key="h_vmem" value="2G"/>
        <need scope="INSTALL_ARTIFACTS" key="virtual_free" value="2G"/>
        <need scope="PROCESS_JVM" value="1G"/>
    </runtime>
    <options>
           <option>
               <id>TEST_NAMES</id>
               <name>Test Names</name>
               <help>A comma separated list of the tests to execute. These tests must be in the TEST_CLASSES Jar.
                   See http://maven.apache.org/surefire/maven-surefire-plugin/examples/single-test.html#</help>
               <type>STRING</type>
               <required>false</required>
               <defaultsTo>*</defaultsTo>
               <flagFormat>%s</flagFormat>
               <includeSpaces>false</includeSpaces>
           </option>
        <option>
            <id>COPY_BACK_LOCATION</id>
            <name>Copy back location</name>
            <help>The location where the test results will be copied.</help>
            <type>STRING</type>
            <required>false</required>
            <flagFormat>%s</flagFormat>
            <includeSpaces>false</includeSpaces>
        </option>
    </options>
    <executableIOSchema>
        <input>
            <inputSlot>
                <name>TEST_CLASSES</name>
                <type maxOccurs="1" minOccurs="1">
                    <id>JAR</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </type>
            </inputSlot>
        </input>
        <output>
            <outputSlot>
                <name>REPORT</name>
                <type>
                    <id>TXT</id>
                    <versionExactly>1.0</versionExactly>
                </type>
            </outputSlot>
        </output>
    </executableIOSchema>

</taskConfig>