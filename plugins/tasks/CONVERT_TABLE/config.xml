<taskConfig xsi:noNamespaceSchemaLocation="../../../schemas/plugins.xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>Convert to Lucene Table</name>
    <id>CONVERT_TABLE</id>
    <help>Convert a TSV or VCF file to a Lucene Table (extension .lucene.index), suitable for viewing in the NYoSh
        workbench table viewer.
    </help>
    <version>1.0</version>
    <runtime>
        <need scope="PROCESS" key="excl" value="false"/>
        <need scope="PROCESS" key="h_vmem" value="2G"/>
        <need scope="PROCESS" key="virtual_free" value="2G"/>
        <need scope="INSTALL_ARTIFACTS" key="excl" value="true"/>
        <need scope="INSTALL_ARTIFACTS" key="h_vmem" value="2G"/>
        <need scope="INSTALL_ARTIFACTS" key="virtual_free" value="2G"/>
        <need scope="PROCESS_JVM" value="1G"/>
    </runtime>
    <executableIOSchema>
        <input>
            <inputSlot>
                <name>INPUT_VCF</name>
                <type maxOccurs="1" minOccurs="0">
                    <id>VCF</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </type>
            </inputSlot>
            <inputSlot>
                <name>INPUT_TSV</name>
                <type maxOccurs="1" minOccurs="0">
                    <id>TSV</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </type>
            </inputSlot>
        </input>
        <output>
            <outputSlot>
                <name>EXECUTION_LOG</name>
                <type maxOccurs="1" minOccurs="1">
                    <id>TXT</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </type>
            </outputSlot>
            <outputSlot>
                <name>LUCENE_TABLE</name>
                <type maxOccurs="1" minOccurs="1">
                    <id>LUCENE_INDEX</id>
                    <versionAtLeast>1.0</versionAtLeast>
                </type>
            </outputSlot>
        </output>
    </executableIOSchema>

</taskConfig>