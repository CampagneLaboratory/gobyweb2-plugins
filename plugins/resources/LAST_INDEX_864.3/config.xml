<resourceConfig xsi:noNamespaceSchemaLocation="../../../schemas/plugins.xsd"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>Last base level indices (auto-install)</name>
    <id>LAST_INDEX</id>
    <help>Base indices for the Last aligner.</help>
    <version>864.3</version>
    <requires>
        <resource>
            <id>LAST_ARTIFACT</id>
            <versionAtLeast>287</versionAtLeast>
        </resource>
        <resource>
            <id>FAI_INDEXED_GENOMES</id>
            <versionAtLeast>1.1.2</versionAtLeast>
        </resource>
        <resource>
            <id>GOBY3</id>
            <versionAtLeast>3.3.1</versionAtLeast>
        </resource>
    </requires>
    <artifacts>
        <artifact id="INDEX">
            <attributes>
                <attribute name="organism"/>
                <attribute name="reference-build"/>
                <attribute name="ensembl-version-number"/>
            </attributes>
        </artifact>
        <artifact id="TOPLEVEL_IDS">
            <attributes>
                <attribute name="organism"/>
                <attribute name="reference-build"/>
                <attribute name="ensembl-version-number"/>
            </attributes>
        </artifact>
    </artifacts>

</resourceConfig>
