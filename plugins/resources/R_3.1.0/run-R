
# source setup of R version
. ${JOB_DIR}/artifacts.sh
expose_artifact_environment_variables
. ${RESOURCES_ARTIFACTS_R_BINARIES}/setup.sh

function run_R {
    # Set _JAVA_OPTIONS here in case we need to use RJava/JRI:
    export _JAVA_OPTIONS="-Xms256m -Xmx256m"
    ${RESOURCES_ARTIFACTS_R_BINARIES}/bin/R "$@"
    unset _JAVA_OPTIONS
}

