<resourceConfig xsi:noNamespaceSchemaLocation="../../../schemas/plugins.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>BWA with Goby support</name>
    <id>BWA_WITH_GOBY_ARTIFACT</id>
    <help>Version of BWA that supports Goby file format.</help>
    <version>0.5.9.16.4</version>
    <requires>
        <resource>
            <id>GOBY_CPP_API</id>
            <versionAtLeast>2.1.2</versionAtLeast>
        </resource>
    </requires>
    <!--files>
        <file>
            <id>EXEC_PATH</id>
            <filename>bwa-icb</filename>
        </file>
    </files-->
    <artifacts>
            <artifact id="EXECUTABLE"/>
            <artifact id="INDEX">
                <attributes>
                    <attribute name="organism"/>
                    <attribute name="reference-build"/>
                    <attribute name="ensembl-version-number"/>
                </attributes>
            </artifact>
        </artifacts>
</resourceConfig>
