<resourceConfig xsi:noNamespaceSchemaLocation="../../../schemas/plugins.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <name>Maven Artifacts Downloader</name>
    <id>MAVEN_ARTIFACTS_DOWNLOADER</id>
    <help>Download artifacts from a Maven Repository with an enabled REST-ful interface.</help>
    <version>1.0</version>
    <requires>
        <resource>
            <id>GOBYWEB_SERVER_SIDE</id>
            <versionAtLeast>1.1</versionAtLeast>
        </resource>
    </requires>
    <files>
        <file>
            <id>RUN_DOWNLOADER</id>
            <filename>run_downloader.sh</filename>
        </file>
        <file>
            <id>ARTIFACT_DOWNLOADER</id>
            <filename>ArtifactDownloader.groovy</filename>
        </file>
    </files>
</resourceConfig>
